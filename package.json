{
  "name": "eve-intel-browser",
  "version": "0.2.8",
  "private": true,
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "sde:sync": "node scripts/sync-sde.mjs",
    "sde:compile": "node scripts/compile-dogma-pack.mjs",
    "sde:prepare": "npm run sde:sync && npm run sde:compile",
    "sde:refresh": "npm run sde:prepare",
    "audit:bonuses": "node scripts/audit-dogma-bonuses.mjs",
    "prebuild": "npm run sde:prepare",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "backtest:zkill": "node scripts/backtest-zkill.mjs",
    "desktop:dev:web": "vite",
    "desktop:dev:app": "set VITE_DEV_SERVER_URL=http://localhost:5173&& electron ./electron/main.cjs",
    "desktop:run": "npm run build && electron ./electron/main.cjs",
    "desktop:pack": "npm run build && electron-builder --dir",
    "desktop:dist": "npm run desktop:dist:win",
    "desktop:dist:win": "npm run build && electron-builder --win nsis",
    "desktop:dist:linux": "npm run build && electron-builder --linux AppImage tar.gz",
    "desktop:dist:mac:arm64": "npm run build && electron-builder --mac dmg zip --arm64",
    "release:github": "node scripts/publish-github-release.mjs",
    "release:github:full": "node scripts/publish-github-release.mjs --full",
    "release:github:win": "npm run desktop:dist:win && npm run release:github"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.7.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "build": {
    "appId": "com.eveintel.app",
    "productName": "EVE Intel",
    "icon": "build/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "lunemec",
        "repo": "eve-intel"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "EVE-Intel-Setup-${version}.${ext}",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
